<div style="background-color: #F2E9E4">
  <div class="container" data-controller="insert-design-in-list" data-insert-in-list-position-value="beforeend">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item breadcrumb-digi">
          <%= link_to 'Home', root_path, class: 'breadcrumb-item' %>
        </li>
        <li class="breadcrumb-item breadcrumb-digi">
          <%= link_to 'Diseñadores', portfolios_path, class: 'breadcrumb-item' %>
        </li>
        <li class="breadcrumb-item active" aria-current="page">Diseños</li>
      </ol>
    </nav>
    <p>
      <a class="btn button-digi-grafikka btn-sm" data-bs-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
        <i class="fas fa-plus"></i>&nbsp;&nbsp;Nuevo
      </a>
    </p>
    <div class="collapse mb-3" id="collapseExample">
      <div class="card card-body">
        <%= render 'form', portfolio: @portfolio, design: @design %>
      </div>
    </div>


    <div data-controller="search-designs">
      <%= form_with url: portfolio_designs_path(@portfolio),
      method: :get, html: { class: 'mb-4', data: { search_designs_target: 'searchForm' } } do |f| %>
        <%= f.text_field :query,
                          class: "form-control",
                          placeholder: 'Search design',
                          value: params[:query],
                          data: {
                            search_designs_target: 'searchInput',
                            action: 'keyup->search-designs#update'
                          }
                          %>
      <% end %>

      <%= render 'list', designs: @designs %>
    </div>
  </div>
</div>
