<div class="portfolios-container" style='padding: 50px 0'>
  <div class="container" style='padding-bottom: 70px'>
    <h4 class="">Conversaciones</h4>
    <div class="container-followers">
      <% @chatrooms.each do |chatroom| %>
        <div class="follower bg-white has-shadow my-3 p-2">
          <span>
            <%= link_to chatroom_path(chatroom) do %>
              <% if chatroom.portfolio.user.image.nil? ||chatroom.portfolio.user.name == current_user.name%>
                 <%= image_tag "avatar.png", width: 80, class: 'img-fluid rounded-circle img-thumbnail shadow-sm' %>
              <% else %>
                <%= image_tag "#{chatroom.portfolio.user.image}", width: 80, class: 'img-fluid rounded-circle img-thumbnail shadow-sm' %>
              <% end %>
            <% end %>
          </span>
          <div class="description-follower ms-2">
            <% if chatroom.portfolio.user.name == current_user.name %>
            <h5 class="m-1"><%= chatroom.user.name %> <%= chatroom.user.last_name %></h5>
            <p class="text-muted m-0 ps-1"><%= chatroom.user.email %></p>
            <% else %>
            <h5 class="m-1"><%= chatroom.portfolio.user.name %> <%= chatroom.portfolio.user.last_name %></h5>
            <p class="text-muted m-0 ps-1"><%= chatroom.portfolio.user.email %></p>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
