<div class="portfolios-container">
  <div class="container py-4">
    <h4 class="">Siguiendo</h4>
    <div class="container-followers">
      <% @followers.each do |follower| %>
        <div class="follower bg-white has-shadow my-3 p-2">
          <span>
            <%= link_to portfolio_path(follower.portfolio) do %>
              <%= image_tag "#{follower.portfolio.user.image}", width: 80, class: 'img-fluid rounded-circle img-thumbnail shadow-sm' %>
            <% end %>
          </span>
          <div class="description-follower ms-2">
            <h5 class="m-1"><%= follower.portfolio.user.name %> <%= follower.portfolio.user.last_name %></h5>
            <p class="text-muted m-0 ps-1"><%= follower.portfolio.user.email %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
