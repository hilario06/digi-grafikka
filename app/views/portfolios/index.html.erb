
<div class="container">
  <div class="auto-grid-designs">
    <% @portfolios.each do |portfolio| %>
    <div>
      <%= image_tag("diseno-grafico.jpg", class:"img-fluid mb-3 img-thumbnail shadow-sm") %>
      <p><%= portfolio.user.email %></p>
      <p><%= portfolio.total_likes %></p>
      <p><%= portfolio.stars_average %></p>
      <%= link_to 'perfil', portfolio_path(portfolio) %> |
      <%= link_to 'designs', portfolio_designs_path(portfolio) %>
    </div>
    <% end %>
  </div>
</div>
