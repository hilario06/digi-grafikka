<% if message.user == current_user %>
  <div class='chat-messages chat-messages-right'>
<% else %>
  <div class='chat-messages'>
<% end %>  
  <% if current_user.image.nil? || message.user.image.nil? %>
    <%= image_tag "avatar.png", class: "avatar-message" %> 
  <% else %>  
    <%= image_tag "#{message.user.image}", class: "avatar-message" %> 
  <% end %>
  <div class="message-container" id="message-<%= message.id %>">
    <i class="author">

      <span><%= "#{message.user.name} #{message.user.last_name}" %></span>
      <small><%= message.created_at.utc.localtime("-05:00").strftime("%b %e - %l:%M %p") %></small>
    </i>
    <p><%= message.content %></p>
  </div>
</div>